{
  "name": "envflip",
  "displayName": "EnvFlip",
  "description": "Manage environment variables in .env files with easy toggle functionality",
  "version": "0.0.1",
  "publisher": "khotcholava",
  "repository": {
    "type": "git",
    "url": "https://github.com/khotcholava/EnvFlip"
  },
  "homepage": "https://github.com/khotcholava/EnvFlip",
  "bugs": {
    "url": "https://github.com/khotcholava/EnvFlip/issues"
  },
  "keywords": [
    "env",
    "environment",
    "dotenv",
    ".env",
    "variables",
    "toggle",
    "configuration"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "envflip",
          "title": "EnvFlip",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "envflip": [
        {
          "id": "envflip.envView",
          "name": "Environment Files"
        }
      ]
    },
    "commands": [
      {
        "command": "envflip.toggleEnvVar",
        "title": "Toggle Environment Variable",
        "icon": "$(circle-slash)"
      },
      {
        "command": "envflip.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "envflip.refresh",
          "when": "view == envflip.envView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "envflip.toggleEnvVar",
          "when": "view == envflip.envView && viewItem == envVariable",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/vsce": "^2.22.0"
  }
}
